<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ecopoint | History</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles/landing.css">
    <link rel="stylesheet" href="/styles/partials.css">
</head>
<body>
    <header class="header">
        <h1>Ecopoint</h1>
        <nav class="nav">
          <a href="/">Home</a>
        </nav>
      </header>
    <h1>Submission History</h1>

    <% if (submissions.length > 0) { %>
        <table border="1">
            <thead>
                <tr>
                    <th>Timestamp</th>
                    <th>Collector Name</th>
                    <th>Product Name</th>
                    <th>Points</th>
                </tr>
            </thead>
            <tbody>
                <% submissions.forEach(submission => { %>
                    <tr>
                        <td><%= new Date(submission.submission_date).toLocaleString() %></td>
                        <td><%= submission.collector_id.name %></td>
                        <td><%= submission.productName %></td>
                        <td><%= submission.productPoint %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <!-- Pagination Controls -->
        <div>
            <% if (currentPage > 1) { %>
                <a href="?page=<%= currentPage - 1 %>">Previous</a>
            <% } %>
            Page <%= currentPage %> of <%= totalPages %>
            <% if (currentPage < totalPages) { %>
                <a href="?page=<%= currentPage + 1 %>">Next</a>
            <% } %>
        </div>
    <% } else { %>
        <p style="text-align: center;">No submissions found.</p>
    <% } %>

    <%- include('../partials/footer') %>
</body>
</html>
